<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ADD">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="240dp">

        <FrameLayout

            android:layout_width="160dp"
            android:layout_height="150dp"
            android:background="#EEEE00">

            <ImageView
                android:id="@+id/rejstudent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/reteacher"/>
        </FrameLayout>

        <FrameLayout

            android:layout_width="140dp"
            android:layout_height="150dp"
            android:background="#EE5C42">

            <ImageView
                android:id="@+id/rejteacher"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/restudent"/>

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <FrameLayout

            android:layout_width="140dp"
            android:layout_height="150dp"
            android:background="#9BCD9B">

            <ImageView
                android:id="@+id/rejtrainer"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/retrainer"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:background="#4196E1">

            <ImageView
                android:id="@+id/rejworker"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/reworker"/>

        </FrameLayout>
    </LinearLayout>

</LinearLayout>